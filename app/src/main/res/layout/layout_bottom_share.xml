<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">
        <RelativeLayout
            android:id="@+id/rl_tip"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:id="@+id/iv_tip"
                android:layout_toLeftOf="@+id/tv_tip"
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:background="@color/light_gray" />
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="分享至"
                android:textColor="@color/light_gray"
                android:textSize="16sp" />
            <View
                android:id="@+id/iv_tip2"
                android:layout_toRightOf="@+id/tv_tip"
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:background="@color/light_gray" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_below="@+id/rl_tip"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
           >

            <RelativeLayout
                android:id="@+id/mRlWechat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_wx"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/wechat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/share_wx"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"
                    android:text="@string/str_wechat"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mRlWeixinCircle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_wx_timeline"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/friendster" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/share_wx_timeline"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"
                    android:text="@string/str_wechat_comment"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mRlWeibo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_weibo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/xinliang" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"
                    android:layout_below="@+id/share_weibo"
                    android:text="@string/str_weibo"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mRlQQ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_qq"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/qq" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"
                    android:layout_below="@+id/share_qq"
                    android:text="@string/str_qq"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mRlQzone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/share_qzone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/qqinterspace" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"
                    android:gravity="center"
                    android:layout_below="@+id/share_qzone"
                    android:text="@string/str_qq_zone"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_cancle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/ll_content"
            android:layout_alignParentBottom="true"
            >
        <View
            android:id="@+id/view_devider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/view_devider"
            android:layout_marginTop="5dp"
            android:text="取消"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/light_gray"
            android:textSize="18sp"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
